{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "globals": {
    "device": true,
    "jest": true,
    "describe": true,
    "xdescribe", true,
    "expect": true,
    "window": true,
    "document": true,
    "it": true,
    "xit": true,
  },
  "rules": {
    quotes: ["error", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    max-len: "off",
    no-else-return: "off",
    no-underscore-dangle: ["error", {
      "allowAfterThis": true,
      "allow": ["_source"]
    }],
    "react/prefer-stateless-function": "off",
  }
}
